/***
	Descripci√≥n: Estilos para un modal
***/
.outer-flex-container
	animation mostrarDialog 0.5s ease-in-out
	animation-fill-mode forwards
	align-content center
	align-items center
	background rgba(0,0,0,0.5)
	display flex
	height 100%
	justify-content center
	left 0
	padding-top 50px
	pointer-events auto
	position fixed
	top 0
	opacity 1
	overflow hidden
	transition opacity 0.5s ease-in
	width 100%
	z-index 9999
	.error
		color rojo
		font-family klavika_light
		font-size 14px
	.inner-flex-container
		animation mostarContainer 0.25s ease-in-out 0.25s
		animation-fill-mode forwards
		background blanco
		position relative
		margin 10% auto
		padding 5px 20px 13px 20px
		border-radius 10px
		background color-blanco
		opacity 0
		top 0%
		width 100%
		@media screen and (min-width: 1200px)
			width 1150px
		.ngdialog-close
			background rojo
			border-radius 50%
			color color-grisoscuro
			cursor pointer
			padding 8px
			font-size 20px
			line-height 25px
			position absolute
			right -20px
			text-align center
			top -20px
			text-decoration none
			width 24px
			&:hover
				color color-grisoscuro
.img-responsive
	max-width 100%	
@keyframes mostarContainer
	0% 
		opacity 0
		top 0% 
	100%
		opacity 1
		top 0 
		